{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Budgelet",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/main",   // This must match the output in tasks.json
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
